<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="virginactive.club.access.CheckOutPage"
             Title="CheckOutPage"
             BackgroundColor="White">
    <Shell.TitleView>
        <HorizontalStackLayout VerticalOptions="Fill"
                               HeightRequest="350"
                               Spacing="35"
                               Padding="50">
            <Image Source="logo.png"
                   SemanticProperties.Description="logo"
                   HorizontalOptions="Start"
                   VerticalOptions="Fill"
                   Margin="10,0"
                   Aspect="AspectFit" />
            <Button x:Name="checkinButton"
                    Text="Check In"
                    Clicked="CheckInClicked"
                    HorizontalOptions="End"
                    BackgroundColor="red"
                    TextColor="white"
                    Padding="100"
                    FontSize="20" />
            <Button x:Name="checkoutButton"
                    Text="Check Out "
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="CheckOutClicked"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="20"
                    HeightRequest="60"
                    Margin="0,0,0,0"
                    CornerRadius="5"
                    Padding="100" />
        </HorizontalStackLayout>
    </Shell.TitleView>
    <VerticalStackLayout VerticalOptions="FillAndExpand"
                         Spacing="10">
        <Image Source="banner4.jpeg"
               HeightRequest="600"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Start"
               Aspect="AspectFill" />
        <Label x:Name="checkOutLabel"
               Text="Scan to Check Out"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               Margin="0,20,0,0" />
        <zxing:CameraBarcodeReaderView x:Name="checkoutbarcodeReaderView"
                                       HorizontalOptions="FillAndExpand"
                                       VerticalOptions="FillAndExpand"
                                       HeightRequest="500"
                                       WidthRequest="700"
                                       x:Id="checkout"
                                       BarcodesDetected="CheckoutBarcodesDetected"
                                       IsDetecting="True" />
    </VerticalStackLayout>
</ContentPage>